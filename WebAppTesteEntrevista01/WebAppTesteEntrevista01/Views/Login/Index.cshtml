@model Login

@{
    Layout = "_LayoutDisconnected";
    ViewData["Title"] = "Login";
}

@if (TempData["MessageSucess"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MessageSucess"]
    </div>
}

@if (TempData["MessageError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MessageError"]
    </div>
}

<form asp-controller="Login" asp-action="Start" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="User" class="form-control" id="login">
        @Html.ValidationMessageFor(v => v.User)
    </div>
    <div class="mb-3">
        <label for="Senha" class="form-label">Senha</label>
        <input type="password" asp-for="Password" class="form-control" id="senha">
        @Html.ValidationMessageFor(v => v.Password)
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
    <br /> <br />
    <p>Você entregador, trabalhe conosco, <a asp-controller="Login" asp-action="Create">clique aqui para cadastro.</a></p>
</form>